<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculator_MVP_J" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ButtonStyle" parent="Theme.Calculator_MVP_J">
        <item name="android:textSize">@dimen/Numbers_size</item>
        <item name="android:layout_margin">@dimen/margin_button_size_layout</item>
    </style>
</resources>